<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox fx:controller="server.Controller" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="300.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" >
   <children>
   
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Server">
         <font>
            <Font size="40.0" />
         </font>
         <VBox.margin>
            <Insets bottom="30.0" />
         </VBox.margin>
      </Text>
      
      <Text fx:id="msg" fill="RED" strokeType="OUTSIDE" strokeWidth="0.0" text="접속 대기중...">
         <VBox.margin>
            <Insets bottom="20.0" />
         </VBox.margin>
      </Text>
      
      <Text fx:id="count" strokeType="OUTSIDE" strokeWidth="0.0" text="접속 대기중...">
         <VBox.margin>
            <Insets bottom="10.0" />
         </VBox.margin>
      </Text>
      <HBox alignment="CENTER" prefHeight="47.0" prefWidth="300.0">
         <children>
         
            <Button fx:id="stop" mnemonicParsing="false" onAction="#stop" text="중지" />
            
            <Button fx:id="quit" mnemonicParsing="false" onAction="#quit" text="종료">
               <HBox.margin>
                  <Insets left="30.0" />
               </HBox.margin>
            </Button>
            
         </children>
      </HBox>
